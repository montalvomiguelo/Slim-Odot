{% extends "layout.twig" %}

{% block content %}

    <h1>Add Todo Item</h1>

    <form class="form" action="{{ path_for('todo_items.store', {todo_list_id: todo_list.id}) }}" method="POST">
        {{ csrf_field() }}
        <fieldset class="form-group{% if flash_messages('error') %} form-error{% endif %}">
            <label for="title">Title</label>
            <input class="form-control" type="text" name="title" id="title">
        </fieldset>
        <div class="form-actions">
        </div>
        <input type="submit" class="btn btn-primary btn-block">
    </form>

    <p><a href="{{ path_for('todo_lists.show', {id: todo_list.id}) }}">Back</a></p>

{% endblock %}
