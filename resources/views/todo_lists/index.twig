{% extends "layout.twig" %}

{% block content %}
    <h1>Todo Lists</h1>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th colspan="2"></th>
            </tr>
        </thead>
        <tbody>
            {% for todo_list in todo_lists %}
                <tr>
                    <td><a href="{{ path_for('todo_lists.show', {id: todo_list.id}) }}">{{ todo_list.title }}</a></td>
                    <td><a href="{{ path_for('todo_lists.edit', {id: todo_list.id}) }}">Edit</a></td>
                    <td>
                        <form action="{{ path_for('todo_lists.destroy', {id: todo_list.id}) }}" method="POST">
                            <input type="hidden" name="_METHOD" value="DELETE"/>
                            <input class="btn btn-link" type="submit" value="Delete">
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
