{% extends "layout.twig" %}

{% block content %}

    <h1>Create Todo List</h1>

    {% if messages %}
        <div class="alert alert-error">
        {% for message in messages %}
            {{ message.0 }}
        {% endfor %}
        </div>
    {% endif %}

    <form class="form" action="{{ path_for('todo_lists.store') }}" method="POST">
        {{ csrf_field() }}
        <fieldset class="form-group{% if messages %} form-error{% endif %}">
            <label for="title">Title</label>
            <input class="form-control" type="text" name="title" id="title">
        </fieldset>
        <div class="form-actions">
        </div>
        <input type="submit" class="btn btn-primary btn-block">
    </form>

    <p><a href="{{ path_for('todo_lists.index') }}">Back</a></p>

{% endblock %}
